{
    "$metadata": {
        "version": "1.1.0",
        "author": "Laura Kim",
        "date": "2025-01-05",
        "_üñçÔ∏è comment": "Consistent Nesting : '$value' only at the lowest level to indicate a specific token value"
    },

    "brand": {
        "$description": "Organizing design tokens with themes on figma",
        "color":{
            "$description": "Main colors used",
            "$type": "color",
            
            "primary": {
                "$hue": "primary",
                "base": {"$value": "#5044ff"},
                "ghost-disabled":{ "$value":"#212043"}
            },

            "secondary": {
                "$hue": "secondary",
                "base": {"$value": "#8684ff"}
            },

            "grayscale" : {
                "$hue": "grayscale",
                "white": { "$value":"#ffffff" },
                "gray1": { "$value":"#7c90B0" },
                "gray2": { "$value" : "#6B7483" },
                "gray2.5": { "$value" : "#292e38" },
                "gray3": { "$value" : "#191D24" },
                "gray4": { "$value" : "#141619" },
                "background":{ "$value" : "#0f1015" }
            },

            "red": {
                "$hue": "red",
                "base": { "$value": "#ff475c" },
                "text": { "$value": "#ff5877" },
                "state": {
                    "pressed": { "$value": "#7b232f" },
                    "hover": { "$value": "#FBA2AE" },
                    "disabled": { "$value": "#c9828b" }
                }
            },
            
            "green": {
                "$hue": "green",
                "green1": { "$value": "#09cc88" },
                "green2": { "$value": "#00ffaa" },
                "state": {
                    "pressed": { "$value": "#076642" },
                    "hover": { "$value": "#9bf0d0" },
                    "disabled": { "$value": "#7dc0a6" }
                }
            }
        },

        "fontFamily":{
            "$description": "Simple yet intuitive, using Pretendard as main font",
            "primary":{ "$value": "Pretendard, sans-serif" }
        },

        "fontWeight":{
            "$description": "Mainly bold and regular, implynig hierarchy",

            "regular": { "$value": 400 },
            "bold": { "$value": 700 }
        },

        "fontSize":{
            "$description": "differs between informative - non-informative texts",
            "$type": "size",
            "unit": "px",
            "0":{ "$value": 20 },
            "1": { "$value": 18 },
            "2": { "$value": 16 },
            "3": { "$value": 14 },
            "4": { "$value": 12 },
            "5": { "$value": 10 }
        },

        "typeStyles" : {
            "$description" : "Type styles constructed with the fontFamily, fontWeight, fontSize",
            "bold": {
                "typeface": "Primary",
                "fontWeight": 700,
                "sizes": {
                    "bold-0": { "$value": 20 },
                    "bold-1": { "$value": 18 },
                    "bold-2": { "$value": 16 },
                    "bold-3": { "$value": 14 }
                }
            },

            "regular": {
                "typeface": "Primary",
                "fontWeight": 400,
                "sizes": {
                    "regular-1": { "$value": 18 },
                    "regular-2": { "$value": 16 },
                    "regular-3": { "$value": 14 },
                    "regular-4": { "$value": 12 },
                    "regular-5": { "$value": 10 }
                }
            }
        }
    }
}